@page "/"
@using Fluxor
@using StatePresistanceProject.Actions
@using StatePresistanceProject.State
@inject IState<SampleStore> Store
@inject IState<Value> valueStore
@inject IDispatcher dispatcher
<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.


<p> YOu entered: @valueStore.Value.Content</p>
<input type="text" placeholder="text" @bind-value="@testValue" />
<button @onclick="SetValue" class="btn btn-primary">Save</button>
@code {
    public int Value { get; set; }

    public string testValue { get; set; }
    public void SetValue() => dispatcher.Dispatch(new SetValueAction(testValue));
}